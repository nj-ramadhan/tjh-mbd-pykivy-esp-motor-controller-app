#:kivy 2.1.0

<ScreenInfo>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: layout_header
            orientation: "horizontal"
            padding: 20
			spacing: 50
			size_hint: 2, 0.15

			MDLabel:
				id: subtitle            
				text: "WATER DISPENSER MACHINE"
				halign: 'center'
				valign: 'middle'
				bold: True
				font_size: 32
				color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Main_Logo.png'
                size_hint_x: 0.25
                allow_stretch: True                   


		# choose product layout
		MDBoxLayout:
			id: layout_title
			orientation: "vertical"
			md_bg_color: app.theme_cls.primary_color
			size_hint: 2, 0.1
			padding:10
			spacing:10

			MDLabel:
				text: "INFORMATION"
				halign: 'center'
				valign: 'middle'    
				bold: True
				font_size: 24
				color: 1, 1, 1
				size_hint_y: 0.1

		MDBoxLayout:
			orientation: "vertical"
			md_bg_color: app.theme_cls.accent_color
			size_hint: 2, 0.75
			padding:10
			spacing:10

			MDLabel:
				id: text_info
				text:"Water Refill Station KickYourPlast akan membantu memenuhi kebutuhan air minum kamu tanpa harus nyampah.\nCara penggunaan :\n1. Download Aplikasi KickYourPlast di App Store atau Google Play\n2. Klik Daftar Akun\n3. Isi data secara lengkap\n4. Pilih volume dan jenis air minum pada pilhan menu\n5. Lakukan Pembayaran melalui Gopay, ShoppeePay atau QRIS\n6. Jika sudah, kamu akan mendapatkan QR Code\n7. Scan QR Code pada Water Refill Station terdekat\n8. Atur ketinggian area pengisian tumbler\n9. Simpan tumbler pada area pengisian dan tekan tombol mulai pada touchscreen\n10. Tunggu sampai pengisian selesai"
				font_size: 20
				size_hint_y: 2
				color: 0, 0, 0


	MDRelativeLayout:
		MDFillRoundFlatIconButton:
			id: bt_screen_choose_product
			icon: "water"
			text: "BACK"
			font_size: 28
			size_hint: 0.4, 0.1
			pos_hint: {"center_x": .8, "center_y": .1}
			on_press: root.screen_choose_product()

		MDFillRoundFlatIconButton:
			id: bt_screen_maintenance
			icon: "cogs"
			text: " "
			font_size: 14
			size_hint: 0.18, 0.08
			pos_hint: {"center_x": .75, "center_y": .80}
			on_press: root.screen_maintenance()
				